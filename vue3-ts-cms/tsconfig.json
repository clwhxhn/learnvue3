{
  "compilerOptions": {
    "target": "esnext", // 目标代码（es5/6/7）
    "module": "esnext", // 目标代码需要使用的模块化方案（commonjs、require/module exports/es module import/export）
    "strict": false, // 严格模式的检查
    "jsx": "preserve", // 要不要对jsx做处理（preserve表示不转化，保留）
    "moduleResolution": "node", // 按照node的方式解析模块 import
    "skipLibCheck": true, // 跳过一些库的类型检测
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "useDefineForClassFields": true,
    "sourceMap": true, // 要不要生成映射文件
    "baseUrl": ".",
    "types": ["webpack-env"],
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue", "tests/**/*.ts", "tests/**/*.tsx"], // 当前哪些代码是需要通过ts编译解析的
  "exclude": ["node_modules"] // 排除 
}
